@model CategoryIndexVM
@{
    var categoryModel = Model.Categories.FirstOrDefault();
}
@if(TempData["Mesaj"] != null)
{
    <div class="alert alert-success">
     @TempData["Mesaj"]
    </div>
}

<a class="btn btn-success mb-3" asp-route="addCategory">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name </th>
            <th>Description </th>
            <th>İşlemler </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-primary" asp-route="updateCategory" asp-route-id="@item.CategoryId"> Güncelle</a>
                    <a class="btn btn-danger" asp-route="deleteCategory" asp-route-id="@item.CategoryId">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>


